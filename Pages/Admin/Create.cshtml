@page
@model PaneerandPeas_J110892.Pages.AdminModel
@{
    <h1>Create New Menu Item</h1>

    <form method="post">
        <label for="name">Name</label>
        <input id="name" name="NewFoodItem.Name" required />

        <label for="description">Description</label>
        <textarea id="description" name="NewFoodItem.Description"></textarea>

        <label for="price">Price</label>
        <input id="price" name="NewFoodItem.Price" type="number" step="0.01" required />

        <button type="submit">Save</button>
    </form>
}

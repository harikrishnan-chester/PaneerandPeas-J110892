@page
@model MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Our Menu</h1>

<table class="table" border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        
            @foreach (var item in Model.FoodItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>£@item.Price</td>
                </tr>
            }
        
        
    </tbody>
</table>
